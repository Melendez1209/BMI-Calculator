<Page
    x:Class="BMI计算器.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMI计算器"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:Name="InputStack" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="Height_input" Header="身高：" KeyDown="Height_input_KeyDown" Height="60" Width="325" Margin="0,0,0,20" />
            <TextBox x:Name="Weight_input" Header="体重：" KeyDown="Height_input_KeyDown" Height="60" Width="325" Margin="0,20,0,0" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="100" Orientation="Horizontal">
            <ToggleButton Margin="0,0,10,0" Click="Calculation" FontSize="15">确定</ToggleButton>
            <ToggleButton Margin="10" Click="More" FontSize="15">更多</ToggleButton>
        </StackPanel>
    </Grid>
</Page>